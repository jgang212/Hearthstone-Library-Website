<div class="page-header">
  <h1>Edit Filter #<%= params[:id] %></h1>
</div>

<% if  @filter.errors.full_messages.any? %>
  <ul class="text-danger">
    <% @filter.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-sm-4">

  <%= form_tag("/filters/#{@filter.id}", method: 'patch') do  %>

    <div class="form-group">
      <%= label_tag :filter_name, "Filter Name" %>
      <%= text_field_tag :filter_name, @filter.filter_name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :name, "Card Name" %>
      <%= text_field_tag :name, @filter.name, class: 'form-control' %>
    </div>

    <%= submit_tag "Update Filter", class: 'btn btn-success btn-lg'%>
    or
    <%= link_to "Cancel", "/filters/#{@filter.id}" %>

  <% end %>

  </div>
</div>
