<div class="page-header">
  <h1>New Filter</h1>
</div>

<div class="row">
  <div class="col-sm-4">

    <%= form_tag("/filters", method: 'post') do  %>

      <div class="form-group">
        <%= label_tag :filter_name, "Filter name" %>
        <%= text_field_tag :filter_name, @filter.filter_name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :name, "Text included in card name (case insensitive)" %>
        <%= text_field_tag :name, @filter.name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :artist, "Text included in artist (case insensitive)" %>
        <%= text_field_tag :artist, @filter.artist, class: 'form-control' %>
      </div>

      <%= submit_tag "Create Filter", class: 'btn btn-success btn-lg'%>
      or
      <%= link_to "Cancel", "/filters" %>

    <% end %>



  </div>
</div>
